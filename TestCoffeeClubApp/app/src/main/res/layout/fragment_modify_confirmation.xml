<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textUserNameTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="ユーザ名" />

        <TextView
            android:id="@+id/textUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textUserNameTemp"
            android:layout_alignTop="@+id/textUserNameTemp"
            android:layout_marginTop="60dp"
            android:text="UserName" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="inherit">

        <TextView
            android:id="@+id/textModifyTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_marginStart="230dp"
            android:layout_marginTop="20dp"
            android:text="訂正内容" />

        <TextView
            android:id="@+id/textModifyDaily"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textModifyTemp"
            android:layout_alignTop="@+id/textModifyTemp"
            android:layout_marginTop="60dp"
            android:text="date" />

        <TextView
            android:id="@+id/textModifyValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textModifyDaily"
            android:layout_alignTop="@+id/textModifyDaily"
            android:layout_marginStart="200dp"
            android:text="Value" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textModifyValue"
            android:layout_alignTop="@+id/textModifyValue"
            android:layout_marginEnd="-20dp"
            android:layout_marginTop="0dp"
            android:text="円" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textOrder"
            android:layout_below="@+id/textSum"
            android:layout_marginStart="620dp"
            android:layout_marginTop="400dp"
            android:text="いいえ" />

        <Button
            android:id="@+id/buttonYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buttonNo"
            android:layout_alignTop="@+id/buttonNo"
            android:layout_marginStart="-100dp"
            android:text="はい" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/buttonNo"
            android:layout_alignTop="@+id/buttonNo"
            android:layout_marginEnd="350dp"
            android:layout_marginTop="10dp"
            android:text="TextView" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textMassage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="300dp"
            android:text="上記の訂正内容でよろしいですか。"
            android:textSize="24sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>